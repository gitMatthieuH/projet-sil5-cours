{% extends "sil12VitrineBundle:BackOffice:layout.html.twig" %}


{% block content %}
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Promotion</h3>
        </div>
        <div class="panel-body">
            <table class="record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Reduction</th>
                        <td>{{ entity.reduction }}</td>
                    </tr>
                    <tr>
                        <th>Usagelimit</th>
                        <td>{{ entity.usageLimit }}</td>
                    </tr>
                    <tr>
                        <th>Used</th>
                        <td>{{ entity.used }}</td>
                    </tr>
                    <tr>
                        <th>Coupon</th>
                        <td>{{ entity.coupon }}</td>
                    </tr>
                    <tr>
                        <th>Start</th>
                        <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>End</th>
                        <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Manytomany</th>
                        <td>{{ entity.manyToMany }}</td>
                    </tr>
                </tbody>
            </table>

            <ul class="record_actions">
                <li>
                    <a href="{{ path('promotion') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <a href="{{ path('promotion_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </li>
                <li>{{ form(delete_form) }}</li>
            </ul>
        </div>
    </div> 
</div>
{% endblock %}
