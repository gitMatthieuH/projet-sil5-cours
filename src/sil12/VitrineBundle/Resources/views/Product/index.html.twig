{% extends "sil12VitrineBundle:BackOffice:layout.html.twig" %}

{% block content %}
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Liste des produits</h3>
        </div>
        <div class="panel-body">
            <table class="records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Description</th>
                        <th>Label</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.price }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.label }}</td>
                        <td>{{ entity.stock }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'id': entity.id }) }}">Voir</a>
                            </li>
                            <li>
                                <a href="{{ path('product_edit', { 'id': entity.id }) }}">Editer</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('product_new') }}">
                        Ajouter un produit
                    </a>
                </li>
            </ul>
        </div>
    </div>  
</div>
{% endblock %}
