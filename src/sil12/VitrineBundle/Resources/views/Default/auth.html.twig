{% extends "sil12VitrineBundle::layout.html.twig" %}

{% block content %}
<div class="col-md-6 col-md-offset-3">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Authentification</h3>
    </div>
    <div class="panel-body">

		{% if error %}
			<div>{{ error.message }}</div>
		{% endif %}
		<form action="{{ path('auth_check') }}" method="post">
			<label for="username">Login :</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" />
			<label for="password">Mot de passe :</label>
			<input type="password" id="password" name="_password" />
			<input type="hidden" name="_target_path" value="/accueil" />
			<button type="submit">login</button>
		</form>


    </div>
</div>


{{render(controller('sil12VitrineBundle:Client:new'))}}
  
  

{% endblock %}