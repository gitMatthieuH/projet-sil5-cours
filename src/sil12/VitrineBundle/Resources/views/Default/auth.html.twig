{% extends "sil12VitrineBundle::layout.html.twig" %}

{% block content %}
<div class="col-md-6 col-md-offset-3">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Authentification</h3>
    </div>
    <div class="panel-body">

		{% if error %}
			<div>{{ error.message }}</div>
		{% endif %}
		<form class="form-inline" action="{{ path('auth_check') }}" method="post">
			<div class="form-group">
				<label class="sr-only" for="username">Login :</label>
				<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
			</div>
			<div class="form-group">
				<label class="sr-only" for="password">Mot de passe :</label>
				<input type="password" class="form-control" id="password" name="_password" />
			</div>
			<div class="form-group">
				<input type="hidden" name="_target_path" value="/accueil" />
			</div>
			<button type="submit" class="btn btn-default">Se connecter</button>
		</form>


    </div>
</div>


{{render(controller('sil12VitrineBundle:Client:new'))}}
  
  

{% endblock %}