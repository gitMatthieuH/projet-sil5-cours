
{% extends "sil12VitrineBundle:BackOffice:layout.html.twig" %}

{% block content %}
<div class="col-md-6 col-md-offset-3">
    {% block body %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Mes commandes</h3>
            </div>
            <div class="panel-body">
                <table class="records_list">
                    <thead>
                        <tr>
                            <th>Référence</th>
                            <th>Date de la commande</th>
                            <th>Validé</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('orderhat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{% if entity.orderdate %}{{ entity.orderdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ entity.validated }}</td>
                                <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('orderhat_show', { 'id': entity.id }) }}">Voir</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('orderhat_edit', { 'id': entity.id }) }}">Editer</a>
                                    </li>
                                </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('orderhat_new') }}">
                    Ajouter une commande
                </a>
            </div>
        </div>
    {% endblock %}
</div>
{% endblock %}
