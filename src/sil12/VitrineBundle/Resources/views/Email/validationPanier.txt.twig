<h3 class="panel-title">Récapitulatif de votre commande (ref #{{orderHat.id}}) d'un total de {{totalPrice}} € :</h3>
<table class="table table-striped">
	<thead>
        <tr>
        	<th>Nom</th>
        	<th>Description</th>
        	<th>Prix</th>
        	<th>Quantité</th>
        </tr>
    </thead>
    <tbody>
    	{% for elem in panier %}
			<tr>
				<td>{{ elem.product.name }}</td>
				<td>{{ elem.product.description }}</td>
				{% if elem.proms | length > 0 %}
					{% set price = elem.product.price %}
					{% for prom in elem.proms %}
						{% set price = price - (price / prom.reduction) %}
					{% endfor %}
					<td>{{price}} €</td>
				{% else %}
					<td>{{ elem.product.price }} €</td>
				{% endif %}
				<td>{{ elem.qte }}</td>
			</tr>
		{% endfor %}
		
   </tbody>
</table>