{% extends "sil12VitrineBundle::layout.html.twig" %}

{% block content %}
<div class="col-md-6 col-md-offset-3">
    {% block body %}
        <h1>Client</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ entity.mail }}</td>
                </tr>
            </tbody>
        </table>

            <ul class="record_actions">
        <li>
            <a href="{{ path('client') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('client_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
    {% endblock %}
{% endblock %}