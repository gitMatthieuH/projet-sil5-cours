{% extends "sil12VitrineBundle:BackOffice:layout.html.twig" %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Liste des clients</h3>
            </div>
            <div class="panel-body">
                <table class="records_list">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Mail</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('client_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.mail }}</td>
                            <td>
                            <ul>
                                <li>
                                    <a href="{{ path('client_show', { 'id': entity.id }) }}">Voir</a>
                                </li>
                                <li>
                                    <a href="{{ path('client_edit', { 'id': entity.id }) }}">Editer</a>
                                </li>
                            </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('client_new') }}">
                            Ajouter un client
                        </a>
                    </li>
                </ul>
            </div>
        </div>

    </div>
{% endblock %}
